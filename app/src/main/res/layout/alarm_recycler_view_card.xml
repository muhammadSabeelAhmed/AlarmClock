<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="10dp"
    android:paddingRight="50dp"
    android:paddingBottom="10dp">


    <com.simplemobiletools.commons.views.MyTextView
        android:id="@+id/alarm_card_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/adapter_clock"
        tools:text="00:00:00" />

    <TextView
        android:id="@+id/alarm_card_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_card_time_text_view"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Switch
        android:id="@+id/alarm_card_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:theme="@style/MySwitch"
        android:visibility="visible" />

    <TextView
        android:id="@+id/alarm_card_days_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_card_name_text_view"
        android:textColor="@color/white" />
</RelativeLayout>